# Environment Bootstrap Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Platform Versions
# ============================================================================

# Node.js version (used by platform/windows/Install-NodeJS-Environment.ps1)
NODE_VERSION=20.x

# Python version (used by platform/windows/Install-Pyenv-Environment.ps1)
PYTHON_VERSION=3.11

# ============================================================================
# Deployment Configuration
# ============================================================================

# Deployment mode: container, baremetal, or hybrid
DEPLOYMENT_MODE=container

# ============================================================================
# Docker Settings (for container mode)
# ============================================================================

# Docker Compose version
DOCKER_COMPOSE_VERSION=2.x

# Docker Desktop installation path (Windows)
# DOCKER_DESKTOP_PATH=C:\Program Files\Docker\Docker

# ============================================================================
# Development Tools
# ============================================================================

# Git configuration
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# IDE preference (vscode, intellij, etc.)
PREFERRED_IDE=vscode

# ============================================================================
# Network Configuration
# ============================================================================

# Proxy settings (if behind corporate proxy)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# ============================================================================
# Installation Paths (Windows)
# ============================================================================

# Custom installation paths (optional)
# NODEJS_INSTALL_PATH=C:\Program Files\nodejs
# PYTHON_INSTALL_PATH=C:\Python311
# GIT_INSTALL_PATH=C:\Program Files\Git

# ============================================================================
# Feature Flags
# ============================================================================

# Enable verbose output during setup
VERBOSE=false

# Skip confirmation prompts (for automated setups)
SKIP_CONFIRMATIONS=false

# Enable experimental features
EXPERIMENTAL_FEATURES=false
